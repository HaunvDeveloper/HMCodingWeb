@* Index.cshtml *@
<div class="container-fluid p-0 mb-0">


    <div class="row g-0"> 
        <!-- Danh sách box -->
        <div class="col-md-4 col-12 collapse d-md-block" id="chat-sidebar">
            <!--Logo-->
            <!-- Thanh search -->
            <div class="p-2 border-bottom bg-white d-flex gap-1 align-items-center">
                <a href="/">
                    <img src="/assets/icons/logo.png" alt="Logo" class="img-fluid" style="max-height: 50px;">
                </a>
                <input type="text" id="chat-search"
                       class="form-control form-control-sm rounded-pill"
                       placeholder="Search chats..."
                       style="height:48px"
                >
            </div>

            <!-- Danh sách chat -->
            <ul id="chat-list" class="list-group list-group-flush p-2 pb-5"></ul>
        </div>

        <!-- Khung chat -->
        <div id="chat-container" class="col-md-8 col-12 d-flex flex-column">
            
            <!-- Header: Avatar + Tên -->
            <div id="chat-header" class="d-flex align-items-center border-bottom p-2 bg-light">
                <button class="btn btn-outline-info d-md-none me-3" type="button" data-bs-toggle="collapse" data-bs-target="#chat-sidebar" aria-expanded="false" aria-controls="chat-sidebar">
                    <i class="fa-solid fa-arrow-left"></i> <!-- Bootstrap Icons hamburger menu -->
                </button>
                <img id="chat-avatar" src="/assets/images/avartardefault.jpg"
                     class="rounded-circle me-2"
                     style="width:40px; height:40px; object-fit:cover;" />
                <div>
                    <div id="chat-username" style="font-weight:600;">Chọn một cuộc trò chuyện</div>
                    <small id="chat-status" class="text-muted">Đang offline</small>
                </div>
            </div>

            <!-- Messages -->
            <div id="message-container" class="flex-grow-1 overflow-auto p-3" style="background-color: #f1f0f0;"></div>

            <!-- Typing indicator -->
            <div id="typing-indicator" class="px-3 text-muted fst-italic" style="display: none;"></div>

            <!-- Form nhập -->
            <form id="send-form" class="d-flex align-items-center p-3 border-top bg-white">
                <textarea id="message-input"
                          class="form-control me-2 rounded-1"
                          placeholder="Type a message..."></textarea>
                <!-- Nút emoji -->
                <button id="btn-emoji" class="btn btn-sm btn-light fs-3 me-2" type="button" style="align-content:center; text-align:center;position:relative;">
                    😊
                    <emoji-picker id="emoji-picker" style="position:absolute; bottom:70px; right:-80px; display:none; z-index:999;"></emoji-picker>

                </button>

                <button id="btn-send" class="btn btn-primary rounded-pill" style="height:50px" type="submit">Send</button>
            </form>
        </div>

    </div>
</div>

@section Links {
    <link rel="stylesheet" href="~/css/message.css" asp-append-version="true">
}
@section Scripts {

    <script type="module">
      import 'https://cdn.jsdelivr.net/npm/emoji-picker-element@@^1/index.js';

      const emojiBtn = document.getElementById("btn-emoji");
      const picker = document.getElementById("emoji-picker");
      const input = document.getElementById("message-input");

      // Toggle picker khi nhấn nút
      emojiBtn.addEventListener("click", () => {
        picker.style.display = picker.style.display === "none" ? "block" : "none";
      });

      // Khi chọn emoji → chèn vào textarea
      picker.addEventListener("emoji-click", (event) => {
        input.value += event.detail.unicode;
      });
    </script>

    <script src="~/js/message-index.js" asp-append-version="true"></script>

}