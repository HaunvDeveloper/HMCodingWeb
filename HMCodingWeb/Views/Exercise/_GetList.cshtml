@model List<HMCodingWeb.ViewModels.ExerciseViewModel>
@{
    var startRecord = (((int?)ViewBag.CurrentPage ?? 1) - 1) * ((int?)ViewBag.PageSize ?? 1);
    var endRecord = startRecord + ((int?)ViewBag.PageSize ?? 1);
    var totalRecords = ViewBag.TotalRecords ?? 0;
    var stt = startRecord;
}

<table id="listcodepad" class="table table-sm table-hover table-border table-striped ml-5 mr-3">
    <thead>
        <tr class="table-dark">
            <th>STT</th>
            <th>Mã bài</th>
            <th>Tên bài</th>
            <th>
                Độ khó
            </th>
            <th>Dạng bài</th>
            <th class="d-sm-table-cell">
                Làm đúng
            </th>
            <th class="d-sm-table-cel"></th>
            <th class="d-sm-table-cel"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr data-value="@item.Id" class="@(item.IsCorrect == "Passed" ? "table-success" : item.IsCorrect == "Failed" ? "table-danger" : "")">
                    <td class="stt">@(++stt)</td>
                    <td><a asp-action="Code" asp-controller="Exercise" asp-route-id="@item.Id">@item.ExerciseCode</a></td>
                    <td><a asp-action="Code" asp-controller="Exercise" asp-route-id="@item.Id">@item.ExerciseName</a></td>
                    <td><a asp-action="Code" asp-controller="Exercise" asp-route-id="@item.Id">@item.DifficultyName</a></td>
                    <td>@item.ExerciseTypeName</td>
                    <td class="d-sm-table-cell">
                        <a asp-action="Index" asp-controller="Marking" asp-route-exId="@item.Id">@item.NumberSuccessful</a>
                    </td>
                    <td class="d-sm-table-cel">
                        @if (item.IsCorrect == "Passed")
                        {
                            <img style="width:30px;" src="~/assets/icons/circle-check-solid.svg" />
                        }
                        else if (item.IsCorrect == "Failed")
                        {
                            <img style="width:30px;" src="~/assets/icons/circle-xmark-solid.svg" />
                        }
                    </td>
                    <td class="d-sm-table-cel">
                        <div class="d-flex gap-2">
                            @if (User.IsInRole("admin") || User.IsInRole("teacher") || (long)ViewBag.UserId == item.UserCreatedId)
                            {
                                <div class="dropdown-custom" style="position: relative; display: inline-block;">
                                    <button class="btn btn-sm btn-outline-secondary menu-toggle d-flex justify-content-center align-items-center" type="button">
                                        <span class="material-symbols-outlined">more_vert</span>
                                    </button>
                                    <div class="dropdown-menu-custom" style="display: none; position: absolute; right:0px; z-index: 1000; background: white; border: 1px solid #ccc; border-radius: 4px; min-width: 120px; box-shadow: 0 2px 8px rgba(0,0,0,0.15);">
                                        <a class="dropdown-item-custom" href="@Url.Action("Edit", "Exercise", new { id = item.Id })" style="display: block; padding: 8px 12px; text-decoration: none; color: black;">
                                            ✏️ Edit
                                        </a>
                                        <button onclick="deleteRow(@item.Id)" class="dropdown-item-custom" style="display: block; padding: 8px 12px; width: 100%; border: none; background: none; color: red; text-align: left;">
                                            🗑️ Delete
                                        </button>
                                    </div>
                                </div>
                            }
                            @if (item.AccessId != 3)
                            {
                                <img style="width: 30px" src="~/assets/icons/eye-close.svg" id="eye" title="Bài đang được ẩn" />
                            }
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="align-items: center;justify-content:center;">
                    <h3 style="text-align:center;">Danh sách rỗng</h3>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex gap-2 align-items-center justify-content-between flex-wrap">
    <div>
        <label>Hiển thị: </label>
        <select class="form-select-sm p-1" id="pageSizeSelector" onchange="changePageSize(this)">
            @foreach (var size in ViewBag.AvailablePageSizes)
            {
                if (size == ViewBag.PageSize)
                {
                    <option value="@size" selected>@size</option>
                }
                else
                {
                    <option value="@size">@size</option>
                }
            }
        </select>
        <label>mục</label>

        <br />
        <label class="mt-2">Hiển thị @(startRecord + 1) đến @(endRecord) trong tổng số @(totalRecords) mục</label>

    </div>
    
    <ul class="pagination pagination mb-0">
        <!-- Nút Previous -->
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <button class="page-link" onclick="setPage(@(ViewBag.CurrentPage - 1))" aria-label="Previous">«</button>
        </li>

        <!-- Trang đầu -->
        @if (ViewBag.CurrentPage > 4 && ViewBag.TotalPages > 7)
        {
            <li class="page-item">
                <button class="page-link" onclick="setPage(1)">1</button>
            </li>
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
        }

        <!-- Các trang xung quanh CurrentPage -->
        @{
            int startPage = Math.Max(1, ViewBag.CurrentPage - 3);
            int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 3);
            if (ViewBag.TotalPages > 7)
            {
                if (ViewBag.CurrentPage <= 4)
                {
                    endPage = Math.Min(7, ViewBag.TotalPages);
                }
                else if (ViewBag.CurrentPage >= ViewBag.TotalPages - 3)
                {
                    startPage = Math.Max(1, ViewBag.TotalPages - 6);
                }
            }
            else
            {
                startPage = 1;
                endPage = ViewBag.TotalPages;
            }
        }
        @for (int i = startPage; i <= endPage; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <button class="page-link" onclick="setPage(@i)">@i</button>
            </li>
        }

        <!-- Trang cuối -->
        @if (ViewBag.CurrentPage < ViewBag.TotalPages - 3 && ViewBag.TotalPages > 7)
        {
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
            <li class="page-item">
                <button class="page-link" onclick="setPage(@ViewBag.TotalPages)">@ViewBag.TotalPages</button>
            </li>
        }

        <!-- Nút Next -->
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <button class="page-link" onclick="setPage(@(ViewBag.CurrentPage + 1))" aria-label="Next">»</button>
        </li>
    </ul>
</div>