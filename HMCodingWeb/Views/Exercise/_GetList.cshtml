@model List<HMCodingWeb.ViewModels.ExerciseViewModel>


<table id="listcodepad" class="table table-sm table-hover table-border table-striped ml-5 mr-3">
    <thead>
        <tr class="table-dark">
            <th>Mã bài</th>
            <th>Tên bài</th>
            <th>Độ khó</th>
            <th>Dạng bài</th>
            <th class="d-sm-table-cell">Làm đúng</th>
            <th class="d-sm-table-cel"></th>
            <th class="d-sm-table-cel"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr data-value="@item.Id" class="@(item.IsCorrect == "Passed" ? "table-success": item.IsCorrect == "Failed" ? "table-danger" : "")">
                    <td><a asp-action="Code" asp-controller="Exercise" asp-route-id="@item.Id">@item.ExerciseCode</a></td>
                    <td><a asp-action="Code" asp-controller="Exercise" asp-route-id="@item.Id">@item.ExerciseName</a></td>
                    <td><a asp-action="Code" asp-controller="Exercise" asp-route-id="@item.Id">@item.DifficultyName</a></td>
                    <td>
                        @item.ExerciseTypeName
                    </td>
                    <td class="d-sm-table-cell">
                        @item.NumberSuccessful 

                    </td>
                    <td class="d-sm-table-cel">
                        @if (item.IsCorrect == "Passed")
                        {
                            <img style="width:30px;" src="~/assets/icons/circle-check-solid.svg" />
                        }
                        else if (item.IsCorrect == "Failed")
                        {
                            <img style="width:30px;" src="~/assets/icons/circle-xmark-solid.svg"  />
                        }
                        
                    </td>
                    <td class="d-sm-table-cel">
                        @if (User.IsInRole("admin,teacher") || (long)ViewBag.UserId == item.UserCreatedId)
                        {
                            <div class="dropdown-custom" style="position: relative; display: inline-block;">
                                <button class="btn btn-sm btn-outline-secondary menu-toggle d-flex justify-content-center align-items-center" type="button">
                                    <span class="material-symbols-outlined">more_vert</span>
                                </button>

                                <div class="dropdown-menu-custom" style="display: none; position: absolute; z-index: 1000; background: white; border: 1px solid #ccc; border-radius: 4px; min-width: 120px; box-shadow: 0 2px 8px rgba(0,0,0,0.15);">
                                    <a class="dropdown-item-custom" href="@Url.Action("Edit", "Exercise", new { id = item.Id })" style="display: block; padding: 8px 12px; text-decoration: none; color: black;">
                                        ✏️ Edit
                                    </a>

                                    <button onclick="deleteRow(@item.Id)" class="dropdown-item-custom" style="display: block; padding: 8px 12px; width: 100%; border: none; background: none; color: red; text-align: left;">
                                        🗑️ Delete
                                    </button>
                                </div>
                            </div>
                        }
                    </td>



                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" style="align-items: center;justify-content:center;">
                    <h3 style="text-align:center;">Danh sách rỗng</h3>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="flex gap-2">
    <select class="form-control-sm p-1" id="pageSizeSelector" onchange="changePageSize(this)">
        @foreach (var size in ViewBag.AvailablePageSizes)
        {
            if (size == ViewBag.PageSize)
            {
                <option value="@size" selected>@size</option>
            }
            else
            {
                <option value="@size">@size</option>
            }

        }
    </select>
    <ul class="pagination pagination-lg">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <button class="page-link" onclick="setPage(@(ViewBag.CurrentPage - 1))">&laquo;</button>
        </li>

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <button class="page-link" onclick="setPage(@i)">@i</button>
            </li>
        }
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <button class="page-link" onclick="setPage(@(ViewBag.CurrentPage + 1))">&raquo;</button>
        </li>
    </ul>
</div>


