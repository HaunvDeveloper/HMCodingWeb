<!-- Modal for Adding Sample Code -->
<div class="modal fade" id="sampleCodeModal" tabindex="-1" aria-labelledby="sampleCodeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sampleCodeModalLabel">Chèn Code Mẫu Sinh Output</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="languageSelect" class="form-label">Ngôn ngữ lập trình</label>
                    <select id="languageSelect" class="form-control">
                        @if (programLanguageList != null)
                        {
                            foreach (var i in programLanguageList)
                            {
                                <option data-value="@i.Id" value="@i.ProgramLanguageCode">@i.ProgramLanguageName</option>
                            }
                        }

                    </select>
                </div>

                <div id="sampleCodeEditor" style="height:400px; border:1px solid #ced4da;"></div>
                <div class="mb-3">
                    <label for="codeFileUpload" class="form-label">Tải tệp nguồn (.cpp, .py, .pas, .js)</label>
                    <input type="file" class="form-control" id="codeFileUpload" accept=".cpp,.py,.pas,.js">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="insertSampleCodeBtn">Tạo Output từ Input</button>
            </div>
        </div>
    </div>
</div>


