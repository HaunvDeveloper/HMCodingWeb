@model List<HMCodingWeb.Models.Rank>

@{
    ViewData["Title"] = "Danh Sách Hạng";
}

@section Links {
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
    <style>
        body{
            background: #2c2c2c;
        }
        .rank-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
            flex-direction: row;
        }

        .rank-card {
            width: 350px;
            padding: 20px;
            border-radius: 15px;
            font-family: 'Montserrat', sans-serif;
            text-align: center;
            color: #fff;
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            overflow: hidden;
        }

            .rank-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
            }

        .rank-name {
            font-size: 24px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 10px;
        }

        .rank-description {
            font-size: 14px;
            font-weight: 400;
            text-align: left;
            line-height: 1.6;
            color: #f0f0f0;
        }

            .rank-description ul {
                list-style-type: disc;
                padding-left: 20px;
                margin: 10px 0;
            }

        /* Rank-specific styles */
        .rank-copper {
            background: linear-gradient(135deg, #b87333, #8c5522);
            border: 2px solid #8c5522;
            box-shadow: 0 0 10px rgba(140, 85, 34, 0.6);
        }

        .rank-silver {
            background: linear-gradient(135deg, #d9d9d9, #a1a1a1);
            color: #333;
            border: 2px solid #a1a1a1;
            box-shadow: 0 0 12px rgba(161, 161, 161, 0.7);
        }

            .rank-silver>.rank-description{
                color: #333;
            }
        .rank-gold {
            background: linear-gradient(135deg, #ffd700, #b8860b);
            color: #333;
            border: 2px solid #b8860b;
            box-shadow: 0 0 15px rgba(184, 134, 11, 0.8);
        }

        .rank-platinum {
            background: linear-gradient(135deg, #e5e4e2, #b0b0b0);
            color: #333;
            border: 2px solid #b0b0b0;
            box-shadow: 0 0 18px rgba(176, 176, 176, 0.9);
        }

            .rank-platinum > .rank-description {
                color: #333;
            }

        .rank-diamond {
            background: linear-gradient(135deg, #b9f2ff, #40c4ff);
            border: 2px solid #0288d1;
            box-shadow: 0 0 20px rgba(2, 136, 209, 1);
            animation: pulse 2s infinite;
        }

            .rank-diamond > .rank-description {
                color: #333;
            }

        .rank-elite {
            background: linear-gradient(135deg, #7b1fa2, #4a148c);
            border: 2px solid #4a148c;
            box-shadow: 0 0 22px rgba(74, 20, 140, 1);
            animation: pulse 1.8s infinite;
        }

        .rank-master {
            background: linear-gradient(135deg, #d32f2f, #7f0000);
            border: 2px solid #b8860b;
            box-shadow: 0 0 25px rgba(127, 0, 0, 1);
            animation: pulse 1.6s infinite;
        }

        .rank-challenger {
            background: linear-gradient(135deg, #00e676, #00c853);
            border: 2px solid #00e676;
            box-shadow: 0 0 28px rgba(0, 230, 118, 1);
            animation: pulse 1.4s infinite;
        }

        .rank-champion {
            background: linear-gradient(135deg, #ffeb3b, #fbc02d);
            color: #333;
            border: 3px solid #fbc02d;
            box-shadow: 0 0 30px rgba(251, 192, 45, 1);
            animation: pulse 1.2s infinite;
        }

            .rank-champion::before {
                content: '👑';
                position: absolute;
                top: 10px;
                left: 10px;
                font-size: 24px;
            }

        .rank-supreme {
            background: linear-gradient(135deg, #212121, #6200ea);
            border: 3px solid #6200ea;
            box-shadow: 0 0 35px rgba(98, 0, 234, 1), 0 0 50px rgba(255, 255, 255, 0.5);
            animation: pulse 1s infinite;
        }

            .rank-supreme::before {
                content: '🌟';
                position: absolute;
                top: 10px;
                left: 10px;
                font-size: 24px;
            }

        @@keyframes pulse {
            0%

        {
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        50% {
            box-shadow: 0 0 25px rgba(255, 255, 255, 0.8);
        }

        100% {
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        }

        /* Responsive */
        @@media (max-width: 768px) {
            .rank-list

            {
                grid-template-columns: 1fr;
            }

            .rank-card {
                padding: 15px;
            }

            .rank-name {
                font-size: 20px;
            }

            .rank-description {
                font-size: 12px;
            }

        }
    </style>
}

<div class="container mt-5 mb-3">
    <h1 class="text-center mb-4" style="font-family: 'Montserrat', sans-serif; font-weight: 700;color:white;">Danh Sách Hạng</h1>
    <div class="rank-list text-center">
        @foreach (var r in Model)
        {
            <div class="rank-card rank-@r.RankCode.ToLower()">
                <div class="rank-name">@r.RankName</div>
                <div class="rank-description">
                    <strong>Điều kiện:</strong>
                    @if (!string.IsNullOrEmpty(r.Description))
                    {
                        <ul>
                            @foreach (var condition in r.Description.Split(';'))
                            {
                                <li>@condition.Trim()</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>Không có điều kiện cụ thể.</p>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Có thể thêm JS để xử lý tương tác (ví dụ: click card để hiển thị chi tiết)
        });
    </script>
}