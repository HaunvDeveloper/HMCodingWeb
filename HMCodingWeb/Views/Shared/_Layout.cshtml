            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <h3 class="text-center text-info m-0">HMCoding</h3>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && ViewData["currentAction"]?.ToString() == "Index" ? "active" : "")" asp-action="Index" asp-controller="Home">
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "CodePad" ? "active" : "")" asp-action="Index" asp-controller="Codepad">Codepad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Exercise" ? "active" : "")" asp-action="Index" asp-controller="Exercise">Bài tập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Marking" ? "active" : "")" asp-action="Index" asp-controller="Marking">Bảng chấm bài</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Rank" && currentAction == "RankingList" ? "active" : "")" asp-action="RankingList" asp-controller="Rank">Xếp hạng</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link @(currentController == "Meeting" ? "active" : "")" asp-action="Index" asp-controller="Meeting">MEETING</a>
                        </li> *@
                    </ul>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="nav-item dropdown p-3 notification-dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="notificationDropdown">
                                <i class="fa-solid fa-bell notification-bell"></i>
                                <span class="notification-badge" id="unseenCount" style="display: none;">0</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end notification-menu">
                                <h1 class="dropdown-header text-center text-success">Thông báo</h1>
                                <div id="notificationList"></div>
                            </div>
                        </div>
                        <div class="nav-item dropdown p-3">
                            <a class="nav-link dropdown-toggle text-success @(currentController == "UserInfo" ? "active" : "")" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
