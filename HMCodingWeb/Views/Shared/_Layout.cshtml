                                {
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-area="Admin">Tới trang quản lý</a>
                                }
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" asp-action="Logout" asp-controller="User">Đăng xuất</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="nav-item auth-links">
                            <a class="nav-link" asp-action="Login" asp-controller="User">Đăng nhập</a>
                        </div>
                        <div class="nav-item auth-links">
                            <a class="nav-link" asp-action="Signup" asp-controller="User">Đăng ký</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main id="main">
        @RenderBody()
    </main>


