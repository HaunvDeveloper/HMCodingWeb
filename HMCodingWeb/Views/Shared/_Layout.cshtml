    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script src="~/js/sweetalert2-extend.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://kit.fontawesome.com/0f2d543076.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        function getClassNameByAuth(auth){
            switch (auth) {
                case "admin":
                    return "badge bg-danger";
                case "teacher":
                    return "badge bg-success";
                case "hsgstudent":
                    return "badge bg-info";
                default:
                    return "badge bg-secondary";
            }
        }
        function getTitleByAuth(auth){
            switch (auth) {
                case "admin":
                    return "Quản trị viên";
                case "teacher":
                    return "Giáo viên";
                case "hsgstudent":
                    return "Học sinh giỏi";
                default:
                    return "Người dùng";
            }
        }
        // Kết nối tới SignalR Hub
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/onlineUsersHub")
            .withAutomaticReconnect()
            .build();

        // Xử lý khi nhận danh sách người dùng online
        connection.on("ReceiveOnlineUsers", function (users) {
            const onlineUsersList = document.getElementById("onlineUsersList");
            if (users && users.length > 0) {
                const userList = users.map(user => `
                    <a
                        style="text-decoration:none;"
                        class="${getClassNameByAuth(user.auth)}"
                        title="${getTitleByAuth(user.auth)}"
                        href="/userinfo/details/${user.userId}">
                        ${user.username}
                    </a>`);
                onlineUsersList.innerHTML = userList;
            } else {
                onlineUsersList.textContent = "Không có";
            }
        });
        

        
        // Bắt đầu kết nối
        connection.start().then(function () {
            // Gọi phương thức GetOnlineUsers khi kết nối thành công
            connection.invoke("GetOnlineUsers").catch(function (err) {
                console.error(err.toString());
                document.getElementById("onlineUsersList").textContent = "Lỗi khi tải danh sách người dùng";
            });
        }).catch(function (err) {
            console.error(err.toString());
            document.getElementById("onlineUsersList").textContent = "Lỗi kết nối SignalR";
        });

        //Reconnect
        connection.onreconnected(function () {
            console.log("Reconnected to SignalR Hub");
            connection.invoke("GetOnlineUsers").catch(function (err) {
                console.error(err.toString());
                document.getElementById("onlineUsersList").textContent = "Lỗi khi tải danh sách người dùng";
            });
        });

    </script>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <script src="~/js/notification.js"></script>
        <script>
            
        </script>
    }


    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <text>
            <script>
                $(document).ready(function () {
                    var avatar = localStorage.getItem("UserAvatar");
                    if(avatar) {
                        $("#userAvatar").attr("src", "data:image/jpeg;base64," + avatar);
                    } else {
                        $.ajax({
                                    url: '/UserInfo/GetAvatar',
                                    type: 'GET',
                                    success: function (response) {
                                        if (response.status) {
                                            if(response.avatar){
                                                localStorage.setItem("UserAvatar", response.avatar);
                                                $("#userAvatar").attr("src", "data:image/jpeg;base64," + response.avatar);
                                            } else {
                                                localStorage.removeItem("UserAvatar");
                                                $("#userAvatar").attr("src", "/assets/images/avartardefault.jpg");
                                            }
                                        }else{
                                            localStorage.removeItem("UserAvatar");
                                            $("#userAvatar").attr("src", "/assets/images/avartardefault.jpg");
                                        }
                                    },
                                    error: function () {
                                        console.log("Failed to load avatar.");
                                        $("#userAvatar").attr("src", "/assets/images/avartardefault.jpg");
                                    }
                                });

                    }

                });
            </script>
        </text>
    }

    @if (TempData["UserLogin"] != null)
    {
        <script id="tempShowToast">
            setTimeout(function () {
                showToast("success", "Đăng nhập thành công", 3000);
                $("#tempShowToast").remove();
            }, 100);

        </script>
    }
    @{
        TempData.Remove("UserLogin");
    }

