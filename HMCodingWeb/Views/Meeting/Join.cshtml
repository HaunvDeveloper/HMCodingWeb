@model HMCodingWeb.ViewModels.JoinMeetingViewModel

@{
    ViewData["Title"] = "Xác nhận tham gia cuộc họp";
}

@section Links {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .meeting-card {
            border-radius: 12px;
            padding: 2rem;
            max-width: 800px;
            margin: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-family: 'Roboto', sans-serif;
            font-weight: 500;
            color: #202124;
        }

        .text-muted {
            color: #5f6368 !important;
        }

        .border-light {
            border-color: rgba(0, 0, 0, 0.12) !important;
        }

        .toggle-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background-color: #f1f3f4;
            border: none;
            transition: background-color 0.2s;
            margin-right: 1rem;
        }

            .toggle-btn:hover {
                background-color: #e8eaed;
            }

            .toggle-btn.off {
                background-color: #d93025;
                color: white;
            }

                .toggle-btn.off:hover {
                    background-color: #c5221f;
                }

        #cameraPreviewContainer {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 2rem 0;
        }

        #cameraPreview {
            width: 100%;
            max-width: 480px;
            height: 270px;
            border-radius: 8px;
            background-color: #5f6368;
            object-fit: cover;
        }

        .camera-off {
            background-color: #5f6368;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 1.2rem;
        }

        .text-danger {
            font-size: 0.9rem;
            text-align: center;
        }



        @@media (max-width: 768px) {
            .meeting-card {
                padding: 1rem;
            }

            #cameraPreview {
                max-width: 100%;
                height: 200px;
            }

            .toggle-btn {
                width: 40px;
                height: 40px;
            }
        }
    </style>
}

<div class="container mt-4 mb-4">
    <div class="card meeting-card">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Xác nhận tham gia cuộc họp</h2>
            <hr class="border-light">
            <form id="joinMeetingForm" asp-action="JoinConfirm" method="post" class="row align-items-center">
                <input type="hidden" name="MeetingId" value="@Model.MeetingId" />
                <div class="col-md-6">
                    <div class="meeting-info mb-4">
                        <h4 class="text-dark">@Model.Title</h4>
                        <p class="text-muted">@Model.Description</p>
                        <p><strong>Riêng tư:</strong> @(Model.IsPrivate ? "Có" : "Không")</p>
                        @if (Model.StartTime.HasValue)
                        {
                            <p><strong>Bắt đầu:</strong> @Model.StartTime.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        }
                        @if (Model.EndTime.HasValue)
                        {
                            <p><strong>Kết thúc:</strong> @Model.EndTime.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        }
                    </div>

                    <div class="settings-group mb-4">
                        <h5 class="mb-3">Cài đặt thiết bị</h5>
                        <div class="d-flex align-items-center mb-3">
                            <button type="button" class="toggle-btn" id="micToggle" title="Tắt/Bật microphone">
                                <i class="fas fa-microphone"></i>
                            </button>
                            <input type="checkbox" class="form-check-input d-none" id="muteMic" name="MuteMic" />
                            <label class="form-check-label" for="muteMic">Microphone</label>
                            <button type="button" class="btn btn-sm btn-outline-info ms-2" id="testMic">Kiểm tra mic</button>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <button type="button" class="toggle-btn" id="cameraToggle" title="Tắt/Bật camera">
                                <i class="fas fa-video"></i>
                            </button>
                            <input type="checkbox" class="form-check-input d-none" id="disableCamera" name="DisableCamera" checked />
                            <label class="form-check-label" for="disableCamera">Camera</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="cameraPreviewContainer">
                        <video id="cameraPreview" autoplay playsinline class="camera-off">
                            <i class="fas fa-video-slash"></i>
                        </video>
                    </div>
                </div>
                <div id="errorMessage" class="text-danger mt-2" style="display:none;"></div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="button" class="btn btn-primary btn-join me-2" data-bs-toggle="modal" data-bs-target="#confirmJoinModal">Xác nhận tham gia</button>
                    <a asp-action="Index" class="btn btn-cancel">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmJoinModal" tabindex="-1" aria-labelledby="confirmJoinModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmJoinModalLabel">Xác nhận tham gia</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn tham gia cuộc họp <strong>@Model.Title</strong>?
                <ul class="mt-2">
                    <li>Microphone: <span id="micStatus"></span></li>
                    <li>Camera: <span id="cameraStatus"></span></li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmJoinBtn">Tham gia</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const disableCameraCheckbox = $('#disableCamera');
            const muteMicCheckbox = $('#muteMic');
            const cameraPreviewContainer = $('#cameraPreviewContainer');
            const cameraPreview = $('#cameraPreview');
            const testMicButton = $('#testMic');
            const errorMessage = $('#errorMessage');
            const micToggle = $('#micToggle');
            const cameraToggle = $('#cameraToggle');
            let stream = null;

            // Update toggle button icons
            function updateToggleIcons() {
                if (muteMicCheckbox.is(':checked')) {
                    micToggle.addClass('off').html('<i class="fas fa-microphone-slash"></i>');
                } else {
                    micToggle.removeClass('off').html('<i class="fas fa-microphone"></i>');
                }

                if (disableCameraCheckbox.is(':checked')) {
                    cameraToggle.addClass('off').html('<i class="fas fa-video-slash"></i>');
                    cameraPreview.addClass('camera-off').html('<i class="fas fa-video-slash"></i>');
                } else {
                    cameraToggle.removeClass('off').html('<i class="fas fa-video"></i>');
                    cameraPreview.removeClass('camera-off').html('');
                }
            }

            // Initial icon state
            updateToggleIcons();

            // Handle mic toggle
            micToggle.on('click', function () {
                muteMicCheckbox.prop('checked', !muteMicCheckbox.is(':checked'));
                updateToggleIcons();
            });

            // Handle camera toggle
            cameraToggle.on('click', async function () {
                disableCameraCheckbox.prop('checked', !disableCameraCheckbox.is(':checked'));
                if (!disableCameraCheckbox.is(':checked')) {
                    // Open camera
                    try {
                        stream = await navigator.mediaDevices.getUserMedia({ video: true });
                        cameraPreview[0].srcObject = stream;
                        updateToggleIcons();
                    } catch (err) {
                        console.error('Không thể mở camera:', err);
                        errorMessage.text('Không thể mở camera. Vui lòng kiểm tra quyền truy cập hoặc thiết bị.').show();
                        disableCameraCheckbox.prop('checked', true);
                        updateToggleIcons();
                    }
                } else {
                    // Close camera
                    if (stream) {
                        stream.getTracks().forEach(track => track.stop());
                        stream = null;
                        cameraPreview[0].srcObject = null;
                    }
                    updateToggleIcons();
                }
            });

            // Test microphone
            testMicButton.on('click', async function () {
                try {
                    const micStream = await navigator.mediaDevices.getUserMedia({ audio: true });
                    alert('Microphone hoạt động bình thường!');
                    micStream.getTracks().forEach(track => track.stop());
                } catch (err) {
                    console.error('Không thể kiểm tra microphone:', err);
                    errorMessage.text('Không thể kiểm tra microphone. Vui lòng kiểm tra quyền truy cập hoặc thiết bị.').show();
                }
            });

            // Update modal status
            function updateModalStatus() {
                $('#micStatus').text(muteMicCheckbox.is(':checked') ? 'Tắt' : 'Bật');
                $('#cameraStatus').text(disableCameraCheckbox.is(':checked') ? 'Tắt' : 'Bật');
            }

            // Show modal and update status
            $('button[data-bs-target="#confirmJoinModal"]').on('click', function () {
                updateModalStatus();
            });

            // Confirm join
            $('#confirmJoinBtn').on('click', function () {
                $('#joinMeetingForm').submit();
            });

            // Stop stream on page unload
            window.addEventListener('beforeunload', function () {
                if (stream) {
                    stream.getTracks().forEach(track => track.stop());
                }
            });
        });
    </script>
}