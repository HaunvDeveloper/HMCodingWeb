@model IEnumerable<Codepad>
@{
    var startRecord = (((int?)ViewBag.CurrentPage ?? 1) - 1) * ((int?)ViewBag.PageSize ?? 1);
    var endRecord = startRecord + ((int?)ViewBag.PageSize ?? 1);
    var totalRecords = ViewBag.TotalRecords ?? 0;
}


<table id="listcodepad" class="table table-hover table-border table-striped ml-5 mr-3">
    <thead>
        <tr class="table-dark">
            <th class="col1">ID</th>
            <th class="col2">Tên</th>
            <th class="col3">Ngôn ngữ</th>
            <th class="col4">Thời gian tạo</th>
            <th class="col5">Quyền truy cập</th>
            <th class="col6">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.ToList().Count() > 0)
        {
            @foreach (var codepad in Model)
            {
                <tr data-value="@codepad.Id">
                    <td>@codepad.Id</td>
                    <td>@codepad.FileName</td>
                    <td>@codepad.ProgramLanguage.ProgramLanguageName</td>
                    <td>@(codepad.CreateDate.ToString("dd/MM/yyyy HH:mm:ss")) </td>
                    <td data-value="@codepad.AccessId">@codepad.Access.AccessName</td>
                    <td class="detail">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-outline-primary mx-2" title="Chỉnh sửa" asp-action="Code" asp-controller="CodePad" asp-route-id="@codepad.Id">
                                <span class="material-symbols-outlined mt-1">edit</span>
                            </a>
                            <button class="share-code btn btn-info mx-2" onclick="shareCode(this)" role="button" title="Chia sẻ" data-toggle="modal" data-target="#share-code-popup">
                                <span class="material-symbols-outlined  mt-1" style="font-size:23px;">share</span>
                            </button>
                            <button class="delete-code btn btn-danger mx-2" onclick="deleteCode(this)" role="button" title="Xóa Codepad">
                                <span class="material-symbols-outlined  mt-1">delete</span>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" style="align-items: center;justify-content:center;">
                    <h3 style="text-align:center;">Codepad Rỗng</h3>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="d-flex gap-2 align-items-center justify-content-between flex-wrap">
    <div>
        <label>Hiển thị: </label>
        <select class="form-select-sm p-1" id="pageSizeSelector" onchange="changePageSize(this)">
            @foreach (var size in ViewBag.AvailablePageSizes)
            {
                if (size == ViewBag.PageSize)
                {
                    <option value="@size" selected>@size</option>
                }
                else
                {
                    <option value="@size">@size</option>
                }
            }
        </select>
        <label>mục</label>
        <br />
        <label class="mt-2">Hiển thị @(startRecord + 1) đến @(endRecord) trong tổng số @(totalRecords) mục</label>

    </div>

    <ul class="pagination pagination mb-0">
        <!-- Nút Previous -->
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <button class="page-link" onclick="setPage(@(ViewBag.CurrentPage - 1))" aria-label="Previous">«</button>
        </li>

        <!-- Trang đầu -->
        @if (ViewBag.CurrentPage > 4 && ViewBag.TotalPages > 7)
        {
            <li class="page-item">
                <button class="page-link" onclick="setPage(1)">1</button>
            </li>
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
        }

        <!-- Các trang xung quanh CurrentPage -->
        @{
            int startPage = Math.Max(1, ViewBag.CurrentPage - 3);
            int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 3);
            if (ViewBag.TotalPages > 7)
            {
                if (ViewBag.CurrentPage <= 4)
                {
                    endPage = Math.Min(7, ViewBag.TotalPages);
                }
                else if (ViewBag.CurrentPage >= ViewBag.TotalPages - 3)
                {
                    startPage = Math.Max(1, ViewBag.TotalPages - 6);
                }
            }
            else
            {
                startPage = 1;
                endPage = ViewBag.TotalPages;
            }
        }
        @for (int i = startPage; i <= endPage; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <button class="page-link" onclick="setPage(@i)">@i</button>
            </li>
        }

        <!-- Trang cuối -->
        @if (ViewBag.CurrentPage < ViewBag.TotalPages - 3 && ViewBag.TotalPages > 7)
        {
            <li class="page-item disabled">
                <span class="page-link">...</span>
            </li>
            <li class="page-item">
                <button class="page-link" onclick="setPage(@ViewBag.TotalPages)">@ViewBag.TotalPages</button>
            </li>
        }

        <!-- Nút Next -->
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <button class="page-link" onclick="setPage(@(ViewBag.CurrentPage + 1))" aria-label="Next">»</button>
        </li>
    </ul>
</div>