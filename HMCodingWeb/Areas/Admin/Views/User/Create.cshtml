@model HMCodingWeb.Models.User

@{
    ViewData["Title"] = "Thêm Người Dùng";
}

@section Links {
    <link rel="stylesheet" href="~/css/checkbox.css">
    <link rel="stylesheet" href="~/css/course.css">
    <style>
        .form-group {
            display: flex;
            flex-direction: column;
        }
    </style>
}

<div class="container">
    <div class="table-container m-4">
        <h4 class="text-center mb-4 mt-2 text-danger" style="font-family: 'Montserrat', sans-serif; font-size: 30px; font-weight: bold;">THÊM NGƯỜI DÙNG</h4>
        <hr />
        <form id="createUserForm" enctype="multipart/form-data">
            <div class="row">
                <!-- Form Column -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Fullname" class="form-label">Họ và tên</label>
                        <input asp-for="Fullname" class="form-control" required/>
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Birthday" class="form-label">Ngày sinh</label>
                        <input asp-for="Birthday" class="form-control" type="date" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ThemeCodeId" class="form-label">Chủ đề</label>
                        <select asp-for="ThemeCodeId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Themes, "Id", "ThemeCode"))" required>
                            <option value="">Chọn theme</option>
                        </select>
                        <span asp-validation-for="ThemeCodeId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ProgramLanguageId" class="form-label">Ngôn ngữ lập trình</label>
                        <select asp-for="ProgramLanguageId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.ProgramLanguages, "Id", "ProgramLanguageName"))" required>
                        </select>
                        <span asp-validation-for="ProgramLanguageId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AuthId" class="form-label">Quyền</label>
                        <select asp-for="AuthId" class="form-control" required
                                asp-items="@(new SelectList(ViewBag.Auths, "Id", "AuthCode"))">
                        </select>
                        <span asp-validation-for="AuthId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RankId" class="form-label">Hạng</label>
                        <select asp-for="RankId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Ranks, "Id", "RankName"))">
                            <option value="">Không hạng</option>
                        </select>
                        <span asp-validation-for="RankId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Preview Column -->
                <div class="col-md-6">
                    <div class="card mb-3 mt-4">
                        <div class="card-header">
                            <h4>Xem trước Avatar</h4>
                        </div>
                        <div class="card-body text-center">
                            <img id="avatarPreview"
                                 src="/assets/images/avartardefault.jpg"
                                 class="img-fluid rounded-circle"
                                 style="width: 200px; height: 200px; object-fit: cover;"
                                 alt="Avatar Preview" />
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Avatar</label>
                        <input type="file" name="avatarFile" id="avatarFile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Kích thước tối đa: 2MB</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Point" class="form-label">Điểm</label>
                        <input asp-for="Point" class="form-control" type="number" value="0" min="0" value="0" />
                        <span asp-validation-for="Point" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="IsBlock">Bị khóa:</label>
                        <div class="checkbox-wrapper-31 mt-2">
                            <input type="checkbox" asp-for="IsBlock" />
                            <svg viewBox="0 0 35.6 35.6">
                                <circle class="background" cx="17.8" cy="17.8" r="17.8"></circle>
                                <circle class="stroke" cx="17.8" cy="17.8" r="14.37"></circle>
                                <polyline class="check" points="11.78 18.12 15.55 22.23 25.17 12.87"></polyline>
                            </svg>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Password" class="form-control" type="password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mt-4 text-lg-end">
                        <button id="btn-submit" type="submit" class="btn btn-primary">Tạo Người Dùng</button>
                        <a asp-action="Index" asp-controller="User" asp-area="Admin"
                           class="btn btn-secondary ms-2">Hủy</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Preview avatar when a new file is selected
            $("#avatarFile").change(function () {
                var file = this.files[0];
                if (file) {
                    if (file.size > 2 * 1024 * 1024) {
                        $("#validationSummary").text("Kích thước file avatar phải nhỏ hơn 2MB.");
                        this.value = "";
                        $("#avatarPreview").attr("src", "/assets/images/avartardefault.jpg");
                        return;
                    }
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#avatarPreview").attr("src", e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });

            $("#createUserForm").submit(function (e) {
                e.preventDefault();
                var formData = new FormData(this);

                $('#btn-submit').attr('disabled', 'disabled');

                // Client-side file size validation
                var avatarFile = $('input[name="avatarFile"]')[0].files[0];
                if (avatarFile && avatarFile.size > 2 * 1024 * 1024) {
                    $("#validationSummary").text("Kích thước file avatar phải nhỏ hơn 2MB.");
                    $('#btn-submit').removeAttr('disabled');
                    return;
                }

                $.ajax({
                    url: '/admin/user/create',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.status) {
                            showAlert("success", "Created Successfully!");
                            setTimeout(function () {
                                window.location.href = '/admin/user/index';
                            }, 1500);
                        } else {
                            $("#validationSummary").text(response.message);
                        }
                        $('#btn-submit').removeAttr('disabled');
                    },
                    error: function () {
                        $("#validationSummary").text("Đã xảy ra lỗi. Vui lòng thử lại.");
                        $('#btn-submit').removeAttr('disabled');
                    }
                });
            });
        });
    </script>
}