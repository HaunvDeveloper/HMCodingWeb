@model User
@{
    ViewData["Title"] = "Sửa người dùng";
}
@section Links {
    <link rel="stylesheet" href="~/css/checkbox.css">
    <link rel="stylesheet" href="~/css/course.css">
    <style>
        .form-group {
            display: flex;
            flex-direction: column;
        }
    </style>
}


<div class="container">
    <div class="table-container m-4">
        <h4 class="text-center mb-4 mt-2 text-danger" style="font-size:30px;font-weight:bold;">SỬA NGƯỜI DÙNG</h4>
        <hr />
        <form id="editProfileForm" enctype="multipart/form-data">

            <div class="row">
                <!-- Form Column -->
                <div class="col-md-6">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Fullname" class="form-label"></label>
                        <input asp-for="Fullname" class="form-control" />
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Birthday" class="form-label"></label>
                        <input asp-for="Birthday" class="form-control" type="date" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>



                    <div class="form-group mb-3">
                        <label asp-for="ThemeCodeId" class="form-label">Theme</label>
                        <select asp-for="ThemeCodeId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Themes, "Id", "ThemeCode"))"></select>
                        <span asp-validation-for="ThemeCodeId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ProgramLanguageId" class="form-label">Programming Language</label>
                        <select asp-for="ProgramLanguageId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.ProgramLanguages, "Id", "ProgramLanguageName"))"></select>
                        <span asp-validation-for="ProgramLanguageId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AuthId" class="form-label">Authentication</label>
                        <select asp-for="AuthId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Auths, "Id", "AuthCode"))"></select>
                        <span asp-validation-for="AuthId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RankId" class="form-label">Rank</label>
                        <select asp-for="RankId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.Ranks, "Id", "RankName"))"></select>
                        <span asp-validation-for="RankId" class="text-danger"></span>
                    </div>
                    
                </div>

                <!-- Preview Column -->
                <div class="col-md-6">
                    <div class="card mb-3 mt-4">
                        <div class="card-header">
                            <h4>Avatar Preview</h4>
                        </div>
                        <div class="card-body text-center">
                            <img id="avatarPreview"
                                 src="@(Model.AvartarImage != null ? "data:image/jpeg;base64," + Convert.ToBase64String(Model.AvartarImage) : "/assets/images/avartardefault.jpg")"
                                 class="img-fluid rounded-circle"
                                 style="width: 200px; height: 200px; object-fit: cover;"
                                 alt="Avatar Preview" />
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Avatar</label>
                        <input type="file" name="avatarFile" id="avatarFile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Max size: 2MB</small>
                        
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Point" class="form-label"></label>
                        <input asp-for="Point" class="form-control" type="number" />
                        <span asp-validation-for="Point" class="text-danger"></span>
                    </div>
                    <div class=" mb-3">
                        <label for="HasAccount">Bị Khóa: </label>
                        <div class="checkbox-wrapper-31 mt-2">
                            <input type="checkbox" asp-for="IsBlock" />
                            <svg viewBox="0 0 35.6 35.6">
                                <circle class="background" cx="17.8" cy="17.8" r="17.8"></circle>
                                <circle class="stroke" cx="17.8" cy="17.8" r="14.37"></circle>
                                <polyline class="check" points="11.78 18.12 15.55 22.23 25.17 12.87"></polyline>
                            </svg>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    

                    <div class=" mt-4 text-lg-end">
                        <button id="btn-submit" type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="Index" asp-controller="User"  asp-area="Admin"
                           class="btn btn-secondary ms-2">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Preview avatar when a new file is selected
            $("#avatarFile").change(function () {
                var file = this.files[0];
                if (file) {
                    if (file.size > 2 * 1024 * 1024) {
                        $("#validationSummary").text("Avatar file size must be less than 2MB.");
                        return;
                    }
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#avatarPreview").attr("src", e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });

            $("#editProfileForm").submit(function (e) {
                e.preventDefault();
                var formData = new FormData(this);

                $('#btn-submit').attr('disabled', 'disabled'); // Disable the button to prevent multiple submissions

                // Client-side file size validation
                var avatarFile = $('input[name="avatarFile"]')[0].files[0];
                if (avatarFile && avatarFile.size > 2 * 1024 * 1024) {
                    $("#validationSummary").text("Avatar file size must be less than 2MB.");
                    return;
                }

                $.ajax({
                    url: '/admin/user/edit',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.status) {
                            showAlert("success","Updated successfully!");
                            setTimeout(function () {
                                window.location.href = '/admin/user/index';
                            }, 1500);
                        } else {
                            $("#validationSummary").text(response.message);
                        }
                        $('#btn-submit').removeAttr('disabled'); // Re-enable the button
                    },
                    error: function () {
                        $("#validationSummary").text("An error occurred. Please try again.");
                        $('#btn-submit').removeAttr('disabled'); // Re-enable the button
                    }
                });
            });
        });
    </script>

}